# API配置
# 翻译API的地址
TRANSLATION_API_URL=https://api.example.com/translate

# 翻译API的访问密钥
TRANSLATION_API_KEY=your-api-key

# 翻译提示词，可以根据需要自定义
TRANSLATION_PROMPT=请将以下内容翻译成中文：

# Docker配置
# Docker镜像名称和标签，默认为justincnn/excel-translator:latest
DOCKER_IMAGE=justincnn/excel-translator:latest

# Flask配置
# 设置为production或development
FLASK_ENV=production

# 上传文件大小限制（MB）
MAX_CONTENT_LENGTH=16777216

# 服务器配置
# 服务器主机地址，默认为0.0.0.0
HOST=0.0.0.0

# 服务器端口，默认为6763
PORT=6763

# 调试模式，生产环境建议设置为false
DEBUG=false

# 日志配置
# 日志级别：DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 安全配置
# 是否启用HTTPS
USE_HTTPS=false

# 会话密钥，用于加密会话数据
SECRET_KEY=your-secret-key

# 跨域配置
# 允许的跨域来源，多个来源用逗号分隔
CORS_ORIGINS=http://localhost:6763,http://127.0.0.1:6763 